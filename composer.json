{
    "name": "deralia/maintenance-bundle",
    "type": "symfony-bundle",
    "description": "This bundle allows you to place your website in maintenance mode by calling two commands from your console.",
    "keywords": ["Symfony2", "bundle", "maintenance"],
    "homepage": "https://github.com/lexik/LexikMaintenanceBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Gilles Gauthier",
            "email": "g.gauthier@lexik.fr"
        },
        {
            "name": "Dev Lexik",
            "email": "dev@lexik.fr"
        },
        {
            "name": "Djuri Baars",
            "email" : "info@djurict.nl"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/console": "^6.0|^7.0",
        "symfony/framework-bundle": "^6.0|^7.0",
        "symfony/translation": "^6.0|^7.0"
    },
    "require-dev": {
        "doctrine/orm": "^2.9",
        "doctrine/doctrine-bundle": "^2.5",
        "phpunit/phpunit": "8.5.*",
        "symfony/phpunit-bridge": "^6.0|^7.0",
        "rector/rector": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.9"
    },
    "suggest": {
        "ext-memcache": "*",
        "ext-pdo": "*"
    },
    "autoload":     {
        "psr-4": { "Lexik\\Bundle\\MaintenanceBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\Lexik\\Bundle\\MaintenanceBundle\\": "Tests/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
